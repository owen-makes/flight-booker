<div class="max-w-3xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- Booking Header -->
    <div class="bg-cyan-600 text-white px-6 py-4">
      <h1 class="text-2xl font-bold text-white">Booking Confirmation #<%= @booking.id %></h1>
      <p class="text-cyan-100">Thank you for booking with us!</p>
    </div>

    <!-- Flight Details -->
    <div class="py-2 px-6 border-b">
      <h2 class="text-xl font-semibold mb-4">Flight Details</h2>
      <div class="flex items-center justify-between mb-2">
        <div class="flex items-center space-x-4">
          <div class="text-center">
            <p class="text-2xl font-bold"><%= @booking.flight.departure_airport.airport_code %></p>
          </div>
          
          <div class="text-cyan-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </div>
          
          <div class="text-center">
            <p class="text-2xl font-bold"><%= @booking.flight.arrival_airport.airport_code %></p>
          </div>
        </div>
        
        <div class="text-right ml-10">
          <p class="text-sm text-gray-600">Flight Date</p>
          <p class="font-semibold"><%= @booking.flight.date.strftime("%B %d, %Y") %></p>
          <p class="text-sm text-gray-600">Departure Time</p>
          <p class="font-semibold"><%= @booking.flight.date.strftime("%I:%M %p") %></p>
        </div>
      </div>
    </div>

    <!-- Passenger List -->
    <div class="p-6">
      <h2 class="text-xl font-semibold mb-4">Passenger Information</h2>
      <div class="space-y-4">
        <% @booking.passengers.each_with_index do |passenger, index| %>
          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div>
              <p class="font-medium">Passenger #<%= index + 1 %></p>
              <p class="text-gray-600"><%= passenger.name %></p>
              <p class="text-sm text-gray-500"><%= passenger.email %></p>
            </div>
            <div class="bg-cyan-100 text-cyan-800 px-3 py-1 rounded-full text-sm">
              Confirmed
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="bg-gray-50 px-6 py-4 flex justify-between items-center">
      <%= link_to "Back to Flights", flights_path, 
          class: "text-gray-600 hover:text-gray-800 font-medium" %>
      
      <%= link_to "Print Confirmation", "#", 
          class: "bg-cyan-600 text-white px-4 py-2 rounded hover:bg-cyan-700 transition-colors" %>
    </div>
  </div>
</div>